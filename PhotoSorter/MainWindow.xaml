<Window x:Class="PhotoSorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoSorter"
        mc:Ignorable="d"
        Title="Files sorter" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="SourceFolder" HorizontalAlignment="Left" Margin="40,44,0,0" TextWrapping="Wrap" Text="Source folder" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="DestinationFolder" HorizontalAlignment="Left" Margin="40,88,0,0" TextWrapping="Wrap" Text="Destination folder" VerticalAlignment="Top" Width="200"/>
        <Button Content="Preview" HorizontalAlignment="Left" Height="62" Margin="254,44,0,0" VerticalAlignment="Top" Width="54" Click="Button_Click"/>

    </Grid>
</Window>
